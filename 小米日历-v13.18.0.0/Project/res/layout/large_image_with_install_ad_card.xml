<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/CardLayoutStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/root" android:background="@drawable/normal_clickable_view_bg" android:paddingTop="@dimen/card_normal_margin" android:paddingBottom="@dimen/card_normal_margin" style="@style/CardContentLayoutStyle">
        <TextView android:id="@id/title" android:layout_marginBottom="@dimen/normal_margin" style="@style/AdCardTitleTextStyle" />
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/card_normal_margin">
            <com.miui.calendar.view.OnlineImageView android:id="@id/image" android:layout_width="fill_parent" android:layout_height="@dimen/large_image_ad_image_height" android:scaleType="fitXY" />
        </FrameLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/normal_margin" android:layout_centerVertical="true">
                <TextView android:layout_marginRight="@dimen/card_normal_margin" style="@style/AdSpreadTextStyle" />
                <TextView android:textSize="@dimen/huangli_good_bad_type_size" android:textColor="#80000000" android:id="@id/source" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <View android:id="@id/divider" android:layout_height="10.0dip" android:layout_marginLeft="@dimen/normal_margin" android:layout_marginRight="@dimen/normal_margin" style="@style/VerticalDividerStyle" />
                <TextView android:textSize="@dimen/huangli_good_bad_type_size" android:textColor="#80000000" android:id="@id/download_num" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <ImageButton android:id="@id/close" android:layout_marginLeft="@dimen/card_normal_margin" style="@style/SmallImageAdCloseImageButtonStyle" />
            </LinearLayout>
            <TextView android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/AdButtonStyle" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>