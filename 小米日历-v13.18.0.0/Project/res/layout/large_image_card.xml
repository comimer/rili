<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/CardLayoutStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/title_root" android:background="@null" style="@style/CardTitleWithoutRightPaddingLayoutStyle">
        <TextView android:id="@id/title" style="@style/CardPrimaryTitleTextStyle" />
        <TextView android:gravity="center" android:id="@id/change" android:background="@drawable/normal_clickable_view_bg" android:layout_height="fill_parent" android:text="@string/card_title_change" style="@style/TitleChangeTextStyle" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/content" android:layout_marginBottom="@dimen/history_description_margin_bottom" style="@style/CardContentLayoutStyle">
        <com.miui.calendar.view.OnlineImageView android:id="@id/image" android:layout_width="fill_parent" android:layout_height="@dimen/large_image_card_image_height" style="@style/ImageStyle" />
        <TextView android:textSize="@dimen/card_title_text_size" android:textColor="@color/holiday_detail_item_content_color" android:id="@id/description" android:layout_marginTop="@dimen/large_margin" android:lineSpacingExtra="@dimen/small_margin" style="@style/ListSecondaryTextStyle" />
    </LinearLayout>
    <TextView android:id="@id/more" style="@style/CardMoreTextStyle" />
</LinearLayout>