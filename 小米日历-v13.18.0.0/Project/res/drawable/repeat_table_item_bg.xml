<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/repeat_table_item_bg_press" />
            <stroke android:width="1.0px" android:color="@color/repeat_table_item_stroke_press" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/repeat_table_item_bg_selected" />
            <stroke android:width="1.0px" android:color="@color/repeat_table_item_stroke_selected" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/repeat_table_item_bg_normal" />
            <stroke android:width="1.0px" android:color="@color/repeat_table_item_stroke_normal" />
        </shape>
    </item>
</selector>