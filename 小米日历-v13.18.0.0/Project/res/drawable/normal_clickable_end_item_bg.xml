<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@android:color/transparent" />
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/card_bg_radius" android:bottomRightRadius="@dimen/card_bg_radius" />
            <solid android:color="@color/normal_clickable_view_bg_p" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@android:color/transparent" />
    <item android:drawable="@android:color/transparent" />
</selector>